#!/usr/bin/env perl6
# √counter *
; use v6.c
; no strict
; no worries
; no fatal
; @*ARGS
. elems or die "err: want information but need addresses\nfix: use `√counter *`"
; <bytes chars words lines>
. fmt('%s',"\t")
. say
; @*ARGS
. map(*.IO)
. grep(*~~:f&:r)
. map({[.slurp.chars,.words.join.chars,.words.elems,.lines.elems,.relative]})
. map(*.fmt('%s',"\t"))
. fmt('%s',"\n")
. say
