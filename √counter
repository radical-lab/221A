#!/usr/bin/env perl6
# √counter *
; use v6.c
; no strict
; no worries
; no fatal
; @*ARGS
. elems or die "err: want information but need addresses\nfix: use `√counter *`"
; $t = <bytes chars words lines files>
; $t
. fmt('%s',"\t")
. uc
. say
; $t
. map({S:g/./\-/})
. fmt('%s',"\t")
. say
; @*ARGS
. map(*.IO)
. grep(*~~:f&:r)
. map({[.slurp.chars,.words.join.chars,.words.elems,.lines.elems,.relative].fmt('%s',"\t")})
. fmt('%s',"\n")
. say
